{
	"name": "svelte-flatpickr-plus",
	"version": "2.1.1",
	"description": "Flatpickr is a lightweight and powerful datetime picker. Svelte Flatpickr Plus is a wrapper for Flatpickr with some extra features.",
	"homepage": "https://svelte-flatpickr-plus.vercel.app/",
	"bugs": {
		"url": "https://github.com/kodaicoder/svelte-flatpickr-plus/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kodaicoder/svelte-flatpickr-plus.git"
	},
	"publishConfig": {
		"@kodaicoder:registry": "https://npm.pkg.github.com"
	},
	"keywords": [
		"svelte",
		"sveltekit",
		"svelte action",
		"datepicker",
		"date  picker",
		"monthpicker",
		"month picker",
		"daterangepicker",
		"date range picker",
		"monthrangepicker",
		"month range picker"
	],
	"author": "kodaicoder <https://github.com/kodaicoder>",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"flatpickr_plus": "^1.0.0",
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@iconify-json/twemoji": "^1.2.2",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/kit": "^2.21.1",
		"@sveltejs/package": "^2.3.11",
		"@sveltejs/vite-plugin-svelte": "^4.0.4",
		"@sveltepress/theme-default": "^5.0.8",
		"@sveltepress/vite": "^1.2.2",
		"eslint": "^9.27.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.4.0",
		"publint": "^0.2.12",
		"svelte": "^5.33.2",
		"svelte-check": "^4.2.1",
		"tslib": "^2.8.1",
		"typescript": "^5.8.3",
		"vite": "^5.4.19"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"flatpickr_plus": "^1.2.1",
		"postcss": "^8.5.3",
		"postcss-import": "^16.1.0",
		"svelte-preprocess": "^6.0.3"
	},
	"packageManager": "pnpm@10.8.1+sha512.c50088ba998c67b8ca8c99df8a5e02fd2ae2e2b29aaf238feaa9e124248d3f48f9fb6db2424949ff901cffbb5e0f0cc1ad6aedb602cd29450751d11c35023677"
}
