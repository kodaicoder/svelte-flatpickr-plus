{
	"name": "svelte-flatpickr-plus",
	"version": "2.0.4",
	"description": "Flatpickr is a lightweight and powerful datetime picker. Svelte Flatpickr Plus is a wrapper for Flatpickr with some extra features.",
	"homepage": "https://github.com/kodaicoder/svelte-flatpickr-plus",
	"bugs": {
		"url": "https://github.com/kodaicoder/svelte-flatpickr-plus/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kodaicoder/svelte-flatpickr-plus.git"
	},
	"keywords": [
		"svelte",
		"sveltekit",
		"svelte action",
		"datepicker",
		"date  picker",
		"monthpicker",
		"month picker",
		"daterangepicker",
		"date range picker",
		"monthrangepicker",
		"month range picker"
	],
	"author": "kodaicoder <https://github.com/kodaicoder>",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"flatpickr_plus": "^1.0.0",
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@iconify-json/twemoji": "^1.2.1",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/kit": "^2.8.5",
		"@sveltejs/package": "^2.3.7",
		"@sveltejs/vite-plugin-svelte": "^4.0.2",
		"eslint": "^9.15.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.0",
		"prettier": "^3.4.1",
		"prettier-plugin-svelte": "^3.3.2",
		"publint": "^0.2.12",
		"svelte": "^5.2.10",
		"svelte-check": "^4.1.0",
		"tslib": "^2.8.1",
		"typescript": "^5.7.2",
		"vite": "^5.4.11"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"@sveltepress/theme-default": "^5.0.2",
		"@sveltepress/vite": "^1.1.0",
		"flatpickr_plus": "^1.1.20",
		"postcss": "^8.4.49",
		"postcss-import": "^16.1.0",
		"svelte-preprocess": "^6.0.3"
	},
	"packageManager": "pnpm@9.1.1+sha512.14e915759c11f77eac07faba4d019c193ec8637229e62ec99eefb7cf3c3b75c64447882b7c485142451ee3a6b408059cdfb7b7fa0341b975f12d0f7629c71195",
	"publishConfig": {
		"@kodaicoder:registry": "https://npm.pkg.github.com"
	}
}
